<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.autoexpenses.entities.CondoEntity</class>
        <class>com.autoexpenses.entities.ExpenseEntity</class>
        <class>com.autoexpenses.entities.ExpenseConfigurationEntity</class>
        <class>com.autoexpenses.entities.ExtraFeeEntity</class>
        <class>com.autoexpenses.entities.FineEntity</class>
        <class>com.autoexpenses.entities.FineConfigurationEntity</class>
        <class>com.autoexpenses.entities.OwnerEntity</class>
        <class>com.autoexpenses.entities.PropertyEntity</class>
        <class>com.autoexpenses.entities.PropertySubTypeEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/auto_expensas"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="expdev"/>
            <property name="hibernate.connection.password" value="expdev"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
